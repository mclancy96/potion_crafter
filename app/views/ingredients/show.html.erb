<div class="container py-4">
  <div class="row mb-4">
    <div class="col-md-8 offset-md-2">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5 mb-0"><%= @ingredient.name %></h1>
        <div>
          <%= link_to 'Edit', edit_ingredient_path(@ingredient), class: 'btn btn-info me-2' %>
          <%= link_to 'Back', ingredients_path, class: 'btn btn-secondary' %>
        </div>
      </div>
      <h2 class="h4">Ingredient Information</h2>
      <ul class="list-group mb-3">
        <li class="list-group-item bg-dark text-white">
          <strong>Description:</strong> <%= @ingredient.description %>
        </li>
        <li class="list-group-item bg-dark text-white">
          <strong>Rarity:</strong> <span class="badge bg-<%= @ingredient.rarity_badge_color %>"><%= @ingredient.rarity %></span>
        </li>
      </ul>
      <h2 class="h4">Potions Requiring <%= @ingredient.name %></h2>
      <% if @ingredient.potion_ingredients.any? %>
        <ul class="list-group mb-3">
          <% @ingredient.potion_ingredients.each do |potion_ingredient| %>
            <li class="list-group-item bg-dark text-white">
              <%= link_to potion_ingredient.potion.name, potion_path(potion_ingredient.potion), class: "link-light" %> - <%= potion_ingredient.quantity %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p><i>No Potions Use this Ingredient</i></p>
      <% end %>
    </div>
  </div>
</div>
