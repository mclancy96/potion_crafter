<% reviews.each do |review| %>
  <div>
    <p><%= review.rating_stars %></p>
    <p><%= review.comment %></p>
    <p><i><%= review.formatted_created_at %></i></p>
    <% if review.edited? %>
      <p>Edited at: <i><%= review.formatted_created_at %></i></p>
    <% end %>
    <p><i>- <%= link_to review.user.username, user_path(review.user) %></i></p>
  </div>
<% end %>
