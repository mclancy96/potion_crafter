<% reviews.each do |review| %>
  <div style="border: 2px solid #ccc; padding: 1em; border-radius: 8px;">
    <p><%= review.rating_stars %></p>
    <p><%= review.comment %></p>
    <p><i><%= review.formatted_created_at %></i></p>
    <% if review.edited? %>
      <p>Edited at: <i><%= review.formatted_updated_at %></i></p>
    <% end %>
    <p>
      <i>- <%= link_to review.user.username, user_path(review.user), class: 'link-light' %></i>
      <% if user_is_current_user?(review.user) %>
        <%= button_to 'Edit Review', edit_potion_review_path(@potion, review), method: :get, class: 'btn btn-secondary' %>
      <% end %>
    </p>
  </div>
<% end %>
